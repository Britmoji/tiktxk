{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "noEmit": true,
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    "module": "es2022",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "jsxFragmentFactory": "Fragment",
    "jsxImportSource": "hono/jsx",
    "types": [
      "@cloudflare/workers-types"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
